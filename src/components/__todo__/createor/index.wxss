/* components/createor/index.wxss */
.createor-view {
  width: 340rpx;
  margin: 0 auto;
  position: relative; 
}
.createor-view .add-btn {
  height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 25rpx 0;
}
.createor-view .add-btn image {
  width: 50rpx;
  height: 50rpx;
}
.btn-lists {
  position: absolute;
  width: 340rpx;
  margin: 0 auto;
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-shadow: 4rpx 2rpx 20rpx 4rpx rgba(0, 0, 0, 0.1);
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  z-index: 100;
  background: #fff;
}
.down {
  top: 100rpx;
}
.up {
  bottom: 100rpx
}
.down::before {
  display: block;
  content: '';
  border-width: 30rpx 30rpx 30rpx 30rpx;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  left: 50%;
  top: -50rpx;
  z-index: 1;
  margin-left: -30rpx;
}
.up::before {
  display: block;
  content: '';
  border-width: 30rpx 30rpx 30rpx 30rpx;
  border-style: solid;
  border-color: #fff transparent transparent transparent;
  position: absolute;
  left: 50%;
  bottom: -50rpx;
  z-index: 1;
  margin-left: -30rpx;
}
.btn-lists .item {
  text-align: center;
}
.btn-lists .item image {
  width: 40rpx;
  vertical-align: middle;
}
.btn-lists .item view {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  font-weight: 300rpx;
}