<import src="./hSwiper/swiperTemplate.wxml"/>

<view class="hSwiper"
  bindtouchstart="touchstart"
  bindtouchmove="touchmove"
  bindtouchend="touchend"
  style="{{viewBoxStyle}}"
>
  <view 
    class="hSwiperCon"
    animation="{{wrapperAnimation}}"
    style="{{wrapperStyle}}" >
    <block wx:for="{{visibleDataList}}" wx:key="{{item}}" >
      <view 
        class="item" 
        animation="{{itemAnimations[index]}}"
        style="{{itemStyle}}" 
        bindtap="onTap">
        <template is="{{item.templateName || templateName}}" data="{{item, index}}"></template>
      </view>
    </block>
  </view>
</view>
