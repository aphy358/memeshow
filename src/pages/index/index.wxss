/**index.wxss**/
.nav-wrapper {
    height: 100%;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.nav-wrapper .logo {
    height: 50rpx;
    /* width:56rpx; */
    width: 156rpx;
}

.nav-wrapper .search-wrapper {
    /* margin-left: 16rpx; */
    margin-left: 24rpx;
    width: 320rpx;
    height: 64rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    border-radius: 64rpx;
    background: #f5f5f5;
}

.nav-wrapper .search-wrapper image {
    width: 34rpx;
    height: 34rpx;
}

.nav-wrapper .search-wrapper text {
    margin-left: 15rpx;
    font-size: 26rpx;
    color: #999999;
}

.header {
  position: fixed;
  width: 100%;
  height: 88rpx;
  left: 0;
  top: 0;
  z-index: 500;
  background: #fff;
  box-shadow: 0 2px 6px 0 rgba(239,239,239,0.50);
}
.search-view{
  position: relative;
  width: 690rpx;
  height: 64rpx;
  margin: 10rpx auto;
  /* box-shadow: 0 4rpx 12rpx 0 rgb(239, 239, 239, 0.5); */
}

.search-icon {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: 14rpx;
  left: 26rpx;
  z-index: 200;
}
.search-icon image {
  width: 100%;
  height: 100%;
}
.search-view input {
  height: 64rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  padding-left: 68rpx;
}
.category {
  width: 100%;
  height: 88rpx;
  /* background: rgb(250, 250, 250); */
  font-size: 34rpx;
  color: #1c1c1c;
  white-space: nowrap;
  box-sizing: border-box;
  padding: 4rpx 30rpx; 
}
.category-item {
  display: inline-block;
  vertical-align: middle;
  height: 80rpx;
  line-height: 80rpx;
  padding-right:50rpx;
}
.placeholder {
  font-size: 30rpx;
  color: #999999;
}

/*
* nav is selected style
*/
.nav-active {
  /* color: rgba(0, 0, 0,1); */
  color: #DB4336;
  /* font-weight: 600; */
}

/*
* 列表item 瀑布流
*/
.medium-container {
  position: relative;
  column-count: 2;
   -webkit-column-width: 345rpx;
  -moz-column-width: 345rpx;
  column-width: 345rpx; 
  padding: 20rpx;
  -webkit-column-gap: 20rpx;
  -moz-column-gap: 20rpx;
  column-gap: 20rpx;
}

scroll-view{height: 100%}

.item-box {
  position: relative;
  display: inline-block;
  width: 345rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 16rpx; 
  border-radius: 8rpx; 
  /* box-shadow:0 -8rpx 16rpx 0  rgba(0,0,0,0.11); */
}
.type-btn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 30rpx;
  right: 30rpx;
  z-index: 100;
}
.type-btn image {
  width: 40rpx;
  height: 40rpx;
}
.item-box .image-box {
  width: 345rpx;
}

.item-box .image-box image{
  width: 345rpx;
  margin: 0 auto;
}
.desc-box {
  padding:20rpx 40rpx
}
.item-desc {
  padding: 0 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #333333;
}
.item-info {
  padding: 14rpx 20rpx;
  display: flex;
  justify-content: space-between;  
  align-items:center;
  box-sizing: content-box;
}
.item-info .belonger {
  display: flex;
  align-items: center;
  height: 36rpx;
  max-width: 200rpx;
  overflow: hidden;
  font-size: 20rpx;
  color: #666666;
}
.item-info .belonger image {
  width: 36rpx;
  height: 36rpx;
  border-radius: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.item-info .like {
  display: flex;
  align-items: center;
  height: 26rpx;
  overflow: hidden;
  font-size: 20rpx;
  color: #666666;
}
.item-info .like image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}









