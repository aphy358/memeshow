<!-- Home Page -->

<view class="home-page-header">
    <navigation-bar>
        <image
            src="./logo.png"
            slot="left"
            mode="widthFix"
            class="home-page-logo"
        ></image>
        <view class="mf-searchbar">
            <input type="text"></input>
        </view>
    </navigation-bar>
    <tabs scroll>
        <block
            wx:for="{{ categories }}"
            wx:for-item="cat"
            wx:key="{{ index }}"
        >
            <tab
                underline="{{ false }}"
                index="{{ index }}"
                class="actived-tab"
            >
                {{ cat.name }}
            </tab>
        </block>
    </tabs>
</view>

<view class="home-page_list">
    <waterfall
        waterfall
        gap="{{ 20 }}"
        col="{{ 2 }}"
        appendList="{{ list }}"
        generic:list-item="waterfall-item"
    ></waterfall>
</view>

<custom-tab-bar selected="{{ 0 }}"></custom-tab-bar>
