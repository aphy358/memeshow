
<view class="page-wrap">
  <view class="hello-wrap">
    <button class="btn" type="primary" bindtap="clickBtn">
      查看评论
    </button>
  </view>

  <progress 
    percentage="{{ percentage }}" 
    color="orange"
    show-pivot="{{ false }}"
    custom-class="ex-class"
    custom-animation="{{ customAnimation }}"
    stroke-width="1rpx" />

  <comment-popup
    generic:comment-list="comment-list-video"
    comments="{{ comments }}"
    show="{{ ifShowCommentPopup }}"
    bind:hideCommentPopup="hideCommentPopup"
    bind:switchStarStatus="switchStarStatus"
    bind:showCommentInputPopup="showCommentInputPopup"
  ></comment-popup>

  <comment-input-popup
    show="{{ ifShowCommentInputPopup }}"
    replyTo="{{ replyTo }}"
    bind:hideCommentInputPopup="hideCommentInputPopup"
    bind:createNewComment="createNewComment"
  ></comment-input-popup>


  <view class="{{ bounceClass }}">
    <hpopup
      show="{{ ifShow0 }}"
      position="center"
      bind:touchendMask="hidePopup"
    >
      <view class="test-popup"></view>
    </hpopup>
  </view>
    
    
</view>
