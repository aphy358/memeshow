
.cover-box{
  width:100%;
  height:100%;
  position:absolute;
  top:0;right:0;bottom:0;left:0;  
}
.cover-bg{
  width:100%;
  height:100%;
  position:absolute;
  overflow: hidden;
  z-index: 2;
  /* filter:blur(400rpx); */
  top:0;right:0;bottom:0;left:0;
  /* background: radial-gradient(#E0E2E9 40%, #fefefe 60%); */
}
.cover-bg-img{
  width:100%;
  height:100%;
  /* filter:blur(200rpx); */
}
.cover-area{
  position: absolute;
  left:80rpx;
  right:80rpx;
  bottom: 136rpx;
  z-index: 100;
}

.cover-area .icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.cover-area .icon .image{
  width: 140rpx;
  height:140rpx;
  /* border-radius: 140rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
}
