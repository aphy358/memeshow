<View class="swiper" >
  <comp
    templateName="hSwiperItem"
    dataList="{{dataList}}"
    newDataList="{{newDataList}}"
    bind:customevent="getRef"
    bind:firstView="firstView"
    bind:beforeViewChange="beforeViewChange"
    bind:afterViewChange="afterViewChange"
    bind:lastView="lastView"
    bind:move="viewMove"
    bind:onTap="onTap"
  ></comp>
</View>

