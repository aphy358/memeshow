  overflow: hidden;
  border-color: #F2F1F6;
}

.dynamics-item .icon{
  width:30rpx;height:30rpx;
}

.dynamics-item .avatar-area text{
  font-size:  26rpx;
  color:#1c1c1c;
}

.dynamics-item .image{
  border-radius: 12rpx;
