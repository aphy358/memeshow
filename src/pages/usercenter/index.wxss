.card-wrap{
 margin-left:-1rpx;
 margin-top: -1rpx;
 display: flex;
 justify-content: flex-start;
 align-items: center;
 flex-wrap:wrap;
}

.card-item{
  position: relative;
  width: 33.333%;
}
.img-area{
  background: #f5f5f5;
  overflow: hidden;
  margin: 2rpx 0rpx 0rpx 2rpx;
  height: 359rpx;
}
.img-area image{
  width: 100%;
}

.card-label{
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  color:#1c1c1c;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.card-label image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.slide-tab{
width:100%;
}
.slide-content,.card-list,.dynamics-list{
min-height: 300rpx;
background: #fafafa
}
.slide-tab .scroll-view-x{
  font-size:34rpx;
  font-weight:600;
  /* color:#8f929b; */
