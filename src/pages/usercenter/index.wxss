/* pages/home/my/index.wxss */
/* base  */
.fc-white{color:#fff}
.fc3,.fc2{color:#1c1c1c}
.fcs2{color:#FF6E36}

.btn{
  margin:0;
  padding:0rpx 24rpx;
  height: 76rpx;
  margin-right:8rpx;
  font-size: 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #ededed;
  color:#333;
  border-radius: 4rpx;
}
.btn.small{
 height: 40rpx;
 font-size: 22rpx;
}
.btn.text{
  border:0;
  background: rgba(0,0,0,0);
  color:#fff;
}
.goto text{
  display: block;
  margin-bottom: 1rpx;
}
.goto{
  display: flex;
  justify-content: flex-starts;
  align-items: center;
}

.icon-btn{
  display: flex;
  align-items: center;
}
.icon-btn image{
  width:38rpx;
  height: 38rpx;
}

.navbar-box.ws-nav-bar{
  transition:transform .3s ease-in-out;
  background-color:transparent;
}

.highlight-navbar-box.ws-nav-bar{
  background: #333;
  /* display: none */
  opacity: 0;
}

.highlight-navbar-box.ws-nav-bar.animation{
  /* animation: myfirst 0.6s linear;
  display: block; */
}

@keyframes myfirst {
    0% { opacity: 0;}
   /** 暂停效果 */ 
  100% { opacity: 1;}
}

.highlight-navbar-box.ws-nav-bar.hide{
  transition:transform 3s ease-in-out;
  transform: scale(1);
  opacity: 0.1;
  background: #333;
  /* display: none; */
}

.highlight-navbar--left .image-area{
  width:50rpx;
  height:50rpx;
  overflow: hidden;
  border-radius: 100%;
}

.container{
  width:100%;
  background: #f5f5f5;
  font-size: 24rpx;
}

/* 账户 */
.account-area{
  width:680rpx;
  height:140rpx;
  position: relative;
 margin-top:30rpx;
}

.account-area .bg{
   width:680rpx;
  height:140rpx;
  position: absolute;
  left:0;right:0;top:0;bottom:0;
}

.account-main{
  position: absolute;
  left:0;right:0;top:0;bottom:0;
  padding:20rpx 0rpx 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header .userinfo{
  width: 100%;
}

.container-head-bg{
  position: absolute;
  top:0;
  left:0;right:0;
  z-index: 1
}

.header{
 position: relative;
 box-sizing: border-box;

 /* background:linear-gradient(to right, #f67100,#f50900); */
 /* background:url('{{}}') no-repeat; */
 /* background-size: 100%; */
/* 
  background-size:750rpx 336rpx; */
}

.header-content{
  position: absolute;
  top:185rpx;
  width:100%;
  left: 0;
  right:0;
  z-index: 100;
}


.store-button{
  margin-left: 28rpx;
  padding:0 6rpx 0 10rpx;
  height:30rpx;
  line-height: 30rpx;
  text-align: center;
  color:#e1213f;
