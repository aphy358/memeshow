position:absolute;
bottom:30rpx;
display:flex;
justify-content:space-between;
align-items:center;
width:500rpx;
padding:0 30rpx;
}
.slogon-area .play-icon{
  width: 50rpx;height:50rpx;
}

.dynamics-bottom{
  padding-right: 30rpx;
}
.dynamics-bottom .slogon{margin-right:50rpx;}
.dynamics-bottom .slogon .icon{
  margin-right:16rpx;
}