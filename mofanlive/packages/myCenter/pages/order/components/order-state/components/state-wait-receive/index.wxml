<view class="card card--no-border white-back margin-top">
    <view class="card__content">
        <view class="order-detail-state">
            <view class="od-icon green">
                <image class="img" src="/assets/images/orders/delivering.png" />
            </view>
            <view class="od-content">
                <view class="od-content-title">商家已发货</view>
                <view class="od-content-detail">
                    <text>还剩</text>
                    <text class="count-down"> {{ countDown }} </text>
                    <text>天自动确认完成</text>
                </view>
            </view>
        </view>
    </view>
</view>
