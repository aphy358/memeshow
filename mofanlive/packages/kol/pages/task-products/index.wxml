    <view class="product__avatar">
      <image src="{{item.avatar.thumbnail}}" />
    </view>
    <view class="product__detail {{index != 0 ? 'b-t' : ''}}">
      <view class="product__title">{{item.title}}</view>
      <view class="product__price">ï¿¥{{format.price(item.price)}}</view>
    </view>
  </view>
</view>