<view class="cell__group action-group">
    <block
        wx:for="{{actions}}"
        wx:key="id"
    >
        <!-- spec cell begin -->
        <view
            bind:tap="handleTap"
            class="cell"
            data-index="{{index}}"
            wx:if="{{item.type == 'spec'}}"
        >
            <view class="cell__header">
                <view class="cell__title">选择规格</view>
                <view class="cell__content cell__title">{{item.content}}</view>
            </view>
            <view class="cell__tail">
                <view class="icon icon-chevron-right cell__icon-link"></view>
            </view>
        </view>
        <!-- spec cell end -->

        <!-- shop cell begin -->
        <view
            class="cell"
            wx:if="{{item.type == 'shop'}}"
        >
            <view class="cell__header">
                <image
                    class="cell__img"
                    src="{{item.avatar}}"
                />
                <view class="cell__title">{{item.name}}</view>
            </view>
            <view class="cell__tail">
                <!-- todo -->
                <button
                    bind:tap="handleTap"
                    class="button--secondary button--mini"
                    data-index="{{index}}"
                    hover-class="button--actived"
                >进店逛逛</button>
            </view>
        </view>
        <!-- shop cell end -->
    </block>
</view>
