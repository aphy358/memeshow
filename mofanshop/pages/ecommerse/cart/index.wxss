/* pages/ecommerse/cart/index.wxss */
.cart-page {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.shop {
  padding: 20rpx;
  background: #fff;
}
.shop .desc {
  display: inline-block
  
}
.shop .desc image {
  width: 38rpx;
  height: 34rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.shop .desc .text {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.cart-group {
  background: #fff;
  padding: 20rpx;
}
.cart-item {
  height: 200rpx;
  margin-bottom: 40rpx;
}
.checkbox {
  width: 60rpx
}
.cart-item .product-image {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  display: inline-block;
  border-radius: 8rpx;
  vertical-align: middle;
}
.cart-item .product-image image {
  width: 200rpx;
}
.cart-item .product-detail {
  width: 450rpx;
  height: 200rpx;
  display: inline-block;
  font-size: 24rpx;
  box-sizing: border-box;
  vertical-align: middle;
  padding-left:20rpx;
}
.product-detail .desc {
  height: 60rpx;
  line-height: 30rpx;
}
.product-detail .bottom {
  height: 60rpx;
  margin-top: 80rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.product-detail .bottom .price{
  color: #ff2741;
}
.bottom-btn {
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  box-shadow: 0 -4rpx 6rpx 2rpx rgba(239,239,239,0.50);
}
.bottom-btn .left {
  display: inline-block;
  width: 150rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.bottom-btn .center {
  display: inline-block;
  width: 400rpx;
  box-sizing: border-box;
  padding-right: 20rpx;
  vertical-align: middle;
}
.bottom-btn .count {
  font-size: 22rpx;
  text-align: right;
}
.bottom-btn .count text {
  color: #ff2741
}
.bottom-btn .postage {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  text-align: right
}
.bottom-btn .right {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #ff7e8d;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}

/*
*购物车加减
*/
.num-view text {
  height:40rpx;
  width:40rpx;
  display:inline-block;
  text-align:center;
  line-height:40rpx;
  font-weight: 300;
  vertical-align: middle;
}
.num-view .reduce, .num-view .add{
  border-radius:6rpx;
  font-size: 36rpx;
}
.num-view .reduce {
  background: rgba(212, 208, 208, 0.6);
  color: rgba(0, 0, 0, 0.6)
}
.num-view .add {
  background: rgba(182, 181, 181, 0.8);
  color: rgba(0, 0, 0, 0.9)
}
.num-view .num {
  font-size: 28rpx;
  margin: 0 10rpx
}