page {
    background-color: #fff;
    padding-top: 90rpx;
    padding-bottom: 98rpx;
}

.tab {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    border-bottom: 1rpx solid #F1F2F6;
    font-size: 34rpx;
    color: #333333;
    background-color: #fff;
    z-index: 2;
}

.search-tab {
    padding-bottom: 116rpx;
    border-bottom: none;
}

.tab .tab-item-container {
    width: 50%;
    display: flex;
    justify-content: center;
}

.tab .tab-item {
    width: auto;
    height: 88rpx;
    text-align: center;
    display: flex;
    align-items: center;
    position: relative;
}

.tab .tab-item.active {
    position: relative;
    height: 82rpx;
    color: #2F92FF;
}

.tab .tab-item.active::after {
    content: '';
    height: 5rpx;
    width: 100%;
    background-color: #2F92FF;
    color: #2F92FF;
    border-radius: 3rpx;
    position: absolute;
    top: 100%;
    left: 0;
}

.tab-content {
    display: none;
    background-color: #F1F2F6;
}

.tab-content.active {
    display: block;
}

.search-music {
    background-color: #fff;
}

.choose-music {
}

.choose-music {
    padding-top: 20rpx;
}

.cell-group {
    margin: 20rpx 0;
}

.cell-group:first-child {
    margin-top: 0;
}

.cell-group.active .sub-list {
    height: auto;
}

.cell {
    padding: 26rpx 30rpx;
    background-color: #fff;
    font-size: 36rpx;
    color: #333333;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.icon-gou {
    opacity: 0;
    font-size: 27rpx;
}

.icon-gou.selected {
    opacity: 1;
}

.cell .cell-desc {
    font-size: 24rpx;
    color: #9B9B9B;
    margin-top: 12rpx;
}

.sub-list {
    height: 0;
    overflow: hidden;
    transition: all .3s;
}

.sub-list .item {
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #333333;
    background-color: #fff;
}

.sub-list .item .music-name-outer {
    padding: 29rpx 30rpx 29rpx 0;
    border-top: 1rpx solid #E2E4E9;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.search-container {
    position: fixed;
    top: 90rpx;
    right: 0;
    left: 0;
    padding: 16rpx;
    background-color: #fff;
    margin: 0;
    z-index: 333;
    border-top: 1rpx solid rgba(215,217,222,1);
    border-bottom: 1rpx solid rgba(226,228,233,1);
}

.search-container input {
    background: #F1F2F6;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #333333;
    padding: 17rpx 62rpx;
}

.search-container icon {
    position: absolute;
    z-index: 2;
    top: 38rpx;
    margin-top: 2rpx;
    font-size: 20rpx;
}

.search-container icon[type=search] {
    left: 32rpx;
}

.search-container icon[type=clear] {
    display: none;
    right: 32rpx;
}

.search-container icon[type=clear].show {
    display: block;
}

.result-container {
    padding-top: 110rpx;
}

.empty-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 53rpx;
    padding-top: 75rpx;
}

.empty-container image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 18rpx;
}

.empty-container text {
    font-size: 28rpx;
    color: rgba(155,155,155,1);
    line-height: 28rpx;
}

.result-cell {
    padding-left: 30rpx;
    background-color: #fff;
}

.result-cell .result-cell-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx 20rpx 0;
    border-bottom: 1rpx solid #E2E4E9;
}

.result-cell .result-cell-inner .result-desc {
    display: flex;
    justify-content: space-between;
}

.result-cell .result-cell-inner .result-desc .album-cover {
    flex-shrink: 0;
    width: 90rpx;
    height: 90rpx;
    border-radius: 4px;
    margin-right: 20rpx;
}

.result-cell .result-cell-inner .result-desc .text {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.result-cell .result-cell-inner .result-desc .text .music-name {
    font-size: 32rpx;
    color: #333333;
}

.result-cell .result-cell-inner .result-desc .text .artist {
    font-size: 24rpx;
    color: #9B9B9B;
}

.finish-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    border: none;
    border-radius: 0;
    margin: 0;
    padding: 31rpx 0;
    background: #57A7FF;
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 0;
    line-height: 36rpx;
}

.finish-btn::after {
    display: none;
}

.hot-music {
    padding: 30rpx;
    padding-top: 150rpx;
}

.music-list {
    display: flex;
    flex-wrap: wrap;
}

.hot-title {
    height: 30rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Light;
    color: rgba(155,155,155,1);
    line-height: 30rpx;
}

.music-item {
    display: flex;
    align-content: center;
    justify-content: center;
    align-items: center;
    padding: 0 24rpx;
    word-break: nowrap;
    height: 54rpx;
    margin-right: 16rpx;
    background: rgba(241,242,246,1);
    border-radius: 34rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(92,94,97,1);
    line-height: 28rpx;
}

.favorite-title {
    padding: 22rpx 30rpx;
    font-size: 30rpx;
    color: rgba(155,155,155,1);
    border-bottom: 1px solid rgba(226,228,233,1);
}