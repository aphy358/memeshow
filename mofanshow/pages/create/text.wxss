page {
    height: 100%;
    background-color: #F1F2F6;
}

.textarea-container textarea {
    width: 100%;
    height: 452rpx;
    padding: 30rpx;
    font-size: 34rpx;
    color: #333333;
    box-sizing: border-box;
    background-color: #fff;
}

.count {
    padding: 20rpx 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #C5C5C5;
    letter-spacing: 0;
    line-height: 36rpx;
}

.count.error {
    color: #e64340;
}