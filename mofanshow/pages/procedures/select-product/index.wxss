/* pages/item-selector/item-selector.wxss */
page{
  --font: PingFang SC;

  --big-size: 34rpx;
  --middle-size: 26rpx;

  --gray: #999;
  --red: #f00;

  --border-radius: 12rpx;
}

.list-container {
  width: 690rpx;
  padding: 0 30rpx;
}

.product {
  display: flex;
  flex-flow: row nowrap;
  position: relative;
  align-items: flex-end;
  padding-bottom: 20rpx;
  border-bottom: #eee 1px solid;
  margin-bottom: 20rpx;
}

.product-image {
  width: 225rpx;
  height: 225rpx;
  border-radius: var(--border-radius);
}

.product-info {
  flex: 1;
  padding: 0 30rpx;
}

.product-info__title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family: var(--font);
  font-size: var(--big-size);
}

.product-info__soldCount {
  font-family: var(--font);
  font-size: var(--middle-size);
  color: var(--gray);
}

.product-info__profit {
  width: 100%;
}

.product-info__profit view {
  display: inline-block;
  vertical-align: bottom;
  color: var(--red);
}

.product-info__profit-tag {
  font-size: var(--middle-size);
}

.product-info__profit-big {
  font-size: var(--big-size);
}

.product-info__price {
  font-size: var(--middle-size);
  color: var(--gray);
}

.product-action {
  width: 105rpx;
  display: flex;
  flex-flow: column-reverse nowrap;
}

.product-action__add {
  width: 105rpx;
  text-align: center;
  padding: 10rpx 0;
  background-color: var(--red);
  color: #fff;
  font-size: var(--big-size);
  border-radius: var(--border-radius);
}

.hint {
  width: 100%;
  text-align: center;
  color: var(--gray);
}